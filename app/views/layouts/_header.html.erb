<header class='navbar navbar-fixed-top navbar-inverse'>
  
  <%= link_to games_path, id: 'logo'  do %>
    
	<span class = "logo-one">Game</span><span class = "logo-two">Sunset</span>
	
	<% end %>
	
  <div class='navbar-inner'>
      <nav>
        <ul class='nav pull-right'">
		  
		  <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Games</a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Wii U', wii_u_path %></li>
			  <li><%= link_to 'Playstation 3', ps3_path %></li>
			  <li><%= link_to 'Playstation 4', ps4_path %></li>
			  <li><%= link_to 'Xbox 360', xbox360_path %></li>
			  <li><%= link_to 'Xbox One', xbox_one_path %></li>
			  <li><%= link_to 'PC', pc_path %></li>
			  <li><%= link_to 'Other Consoles', consoles_path %></li>
			  <li><%= link_to 'Games by Genre', genres_path %></li>
            </ul>
           </li>
		   
		  <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Help</a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Consoles', help_consoles_path %></li>
			  <li><%= link_to 'Genres', help_genres_path %></li>
			  <li><%= link_to 'Users', help_users_path %></li>
            </ul>
           </li>
          
          <% if signed_in? %>
		  
			<li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">Profile</a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'User Stats', user_path(current_user) %></li>
			    <li><%= link_to 'Edit Profile', edit_user_path(current_user) %></li>
              </ul>
            </li>
            <li><%= link_to 'Favorites', favorites_path(current_user) %></li>
            <li><%= link_to 'Sign Out', signout_path, method: 'delete', id: 'signout'%></li>
            
          <% else %>
          
            <li><%= link_to 'Sign Up', signup_path %>
            <li><%= link_to 'Sign In', signin_path %></li>
            
          <% end %>
        </ul>
      </nav>

  </div>
</header>