<% @title = "Contact Us" %>

<div class="center">
  <h3>Contact Us</h3>

  <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
  
    <%= render 'shared/contact_errors' %>
    
    <p>
      <%= f.label :name, 'Username', class: 'marker' %>
      <%= f.text_field :name %>
    </p>  
  
    <p>
      <%= f.label :email, class: 'marker' %>
      <%= f.text_field :email %>
    </p>
  
    <p>
      <%= f.label :message, class: 'marker' %>
      <%= f.text_area :message, size: '6x6' %>
    </p>  
  <br>
  
    <div>
      <%= f.submit 'Send message', :class=> "btn btn-primary" %>
    </div>
    
  <% end %>
  
  <p>
    <a class="btn btn-info" href="/games" role="button">Return Home</a>
  </p>
  
</div>
