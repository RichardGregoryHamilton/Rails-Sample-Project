<% @title = "Dreamcast" %>

<h1>Dreamcast Games</h1>

<table class = "console-table">

  <thead>
    <tr>
	  <th id = 'title-id'>Title</th>
	  <th class = 'game-attributes'>Genre</th>
	  <th>Release Date</th>
	  <th>Rating</th>
    </tr>
  </thead>

  <tbody>
    <% Game.where(console: 'Dreamcast').each do |game| %>
    <tr>
	  <td> <%= game.title %></td>
	  <td> <%= game.genre %></td>
	  <td> <%= game.release_date %></td>
	  <td> <%= game.stars %></td>
	</tr>
	<% end %>
  </tbody>

</table>

<div class = 'center'
  <p>There are <%= Game.where(console: 'Dreamcast').count %> Dreamcast games</p>
  <p>
    <a href="/console-select" class="btn btn-warning btn-lg active" role="button">Consoles</a>
  </p>
</div>