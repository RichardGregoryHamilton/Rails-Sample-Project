<div id="consoleCarousel" class="carousel slide">
  
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag(image_path("#{@title}/#{@title}-#{rand(1..8)}.jpg")) %>
    </div>
    
    <div class="item">
      <%= image_tag(image_path("#{@title}/#{@title}-#{rand(9..16)}.jpg")) %>
    </div>
    
    <div class="item">
      <%= image_tag(image_path("#{@title}/#{@title}-#{rand(17..24)}.jpg")) %>
    </div>
    
  </div>
  
  <a class="left carousel-control" href="#consoleCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
  <a class="right carousel-control" href="#consoleCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
  
</div>