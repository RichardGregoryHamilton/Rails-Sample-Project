<h1>Games Database</h1>
<table>
	<thead>
		<tr>
			<th id = 'title_id'><%=link_to 'Title', :sort => 'title' %></th>
			<th id = 'console_id'><%= link_to 'Console', :sort => 'console' %></th>
			<th id = 'genre_id'><%= link_to 'Genre', :sort => 'genre' %></th>
			<th id = 'release_id'><%= link_to 'Release Date', :sort => 'released_on' %></th>
		</tr>
	</thead>
	<tbody> 
		<% @games.each do |game| %>
		<tr>
			<td id = 'title'><%= game.title %></td>
			<td id = 'console'><%= game.console %></td>
			<td id = 'genre'><%= game.genre %></td>
			<td id = 'release'><%= game.released_on %></td>
			<% if signed_in? %>
				<td><%= link_to 'Show', game, id: 'show' %></td>
				<td><%= link_to 'Edit', edit_game_path(game), id: 'edit' %></td>
				<td><%= link_to 'Delete', game, method: :delete, id: 'delete' %></td>
			</div>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>

<% if signed_in? %>
	<p>
		<%= link_to 'Add a new game', new_game_path, id: 'submit' %>
	</p>
<% end %>