<h3>Edit Review</h3>

<div class = 'center'>
  
  <%= form_for [@game, @review] do |f| %>
 
    <p>
      <%= f.label :body, "Review", :class => 'marker' %><br />
      <%= f.text_area :body, :rows => "10", :cols => "10" %>
    </p>
 
    <p>
      <%= f.submit "Submit Review", :class => 'btn btn-success' %>
    </p>
  
  <% end %>

</div>

<div class = 'center'>
  <%= link_to 'Back', game_reviews_path(@game), :class => 'btn btn-info' %>
</div>